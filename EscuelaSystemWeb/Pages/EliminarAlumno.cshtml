@page
@model EscuelaSystemWeb.Pages.EliminarAlumnoModel
@{
}
<h1>Eliminar Alumno</h1>
<form method="post">
   
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Alumno.Codigo"></label>
        <input type="reset" class="form-control" asp-for="Alumno.Codigo" placeholder="Ingrese un codigo de Alumno">
        <span class="text-danger" asp-validation-for="Alumno.Codigo"></span>
    </div>

    <div class="form-group">
        <label asp-for="Alumno.Nombre"></label>
        <input type="reset" class="form-control" asp-for="Alumno.Nombre" placeholder="Ingrese un nombre">
        <span class="text-danger" asp-validation-for="Alumno.Nombre"></span>
    </div>

    <div class="form-group">
        <label asp-for="Alumno.Activo"></label>
        <input type="checkbox" class="form-control" asp-for="Alumno.Activo">
    </div>
    <button type="submit" class="btn btn-danger">Eliminar</button><br />
    <a asp-page="./Alumnos">Regresar A Alumno</a>

</form>
