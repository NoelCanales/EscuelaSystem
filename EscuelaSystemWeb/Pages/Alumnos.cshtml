@page
@model EscuelaSystemWeb.Pages.AlumnosModel
@{
}
<h1>Listado de Alumnos</h1>

<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <th>Id</th>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Activo</th>
        </tr>

    </thead>

    <tbody>
        @foreach (var item in Model.Alumnos)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Codigo</td>
            <td>@item.Nombre</td>
            
            <td>

                @if (item.Activo)
                {
                    <div>Si</div>

                }
                else
                {
                    <div>No</div>
                }

            </td>
            <td>

                <a class="btn btn-sm btn-info" asp-area="" asp-page="/EditarAlumno" asp-route-id="@item.Id">Editar</a>
                <a class="btn btn-sm btn-danger" asp-area="" asp-page="/EliminarAlumno" asp-route-id="@item.Id">Eliminar</a>

            </td>

        </tr>

        }

    </tbody>

</table>
<a class="btn btn-sm btn-success btn-group-toggle" asp-page="./CrearAlumno">Crear Alumno</a>