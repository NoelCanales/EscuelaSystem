@page
@model EscuelaSystemWeb.Pages.EditarAlumnoModel
@{
}

<form method="post">
    <input type="hidden" asp-for="Alumno.Id" />
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Alumno.Codigo"></label>
        <input type="text" class="form-control" asp-for="Alumno.Codigo" placeholder="Ingrese un codigo de alumno">
        <span class="text-danger" asp-validation-for="Alumno.Codigo"></span>
    </div>

    <div class="form-group">
        <label asp-for="Alumno.Nombre"></label>
        <input type="text" class="form-control" asp-for="Alumno.Nombre" placeholder="Ingrese un nombre">
        <span class="text-danger" asp-validation-for="Alumno.Nombre"></span>
    </div>

    <div class="form-group">
        <label asp-for="Alumno.Activo"></label>
        <input type="checkbox" class="form-control" asp-for="Alumno.Activo">
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button><br />
    <a asp-page="./Alumnos">Regresar A Alumnos</a>

</form>