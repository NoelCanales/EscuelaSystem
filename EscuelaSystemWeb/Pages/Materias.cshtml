@page
@model EscuelaSystemWeb.Pages.MateriasModel
@{
}
<h1>Listado de Materias</h1>
<table class="table table-bordered table-responsive" >
    <thead>
        <tr>
            <th>Id</th>
            <th>Codigo</th>
            <th>Nombre</th>
            <th>Habilitada</th>
            <th>Opciones</th>
        </tr>

    </thead>
   
    <tbody>
        @foreach (var item in Model.Materias)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Codigo</td>
            <td>@item.Descripcion</td>
            <td>

                @if (item.Habilitada)
                {
                    <input type="checkbox" cheked="checked" />

                }
                else
                {
                    <input type="checkbox" cheked="checked"/>
                }

            </td>
            <td>
                
                    <a class="btn btn-sm btn-info" asp-area="" asp-page="/EditMateria" asp-route="@item.Id">Editar</a>
               
            </td>
        </tr>
        }

    </tbody>

</table>