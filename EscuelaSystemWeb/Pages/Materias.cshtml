@page
@model EscuelaSystemWeb.Pages.MateriasModel
@{
}

    <h1>Listado de Materias</h1>

    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Habilitada</th>
                <th>Opciones</th>
            </tr>

        </thead>

        <tbody>
            @foreach (var item in Model.Materias)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Codigo</td>
                    <td>@item.Descripcion</td>
                    <td>

                        @if (item.Habilitada)
                        {
                            <div>Si</div>

                        }
                        else
                        {
                            <div>No</div>
                        }

                    </td>
                    <td>

                        <a class="btn btn-sm btn-info" asp-area="" asp-page="/EditarMateria" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-sm btn-danger" asp-area="" asp-page="/EliminarMateria" asp-route-id="@item.Id">Eliminar</a>

                    </td>

                </tr>

            }

        </tbody>

    </table>



<br>
<a class="btn btn-sm btn-success btn-group-toggle" asp-page="./CrearMateria">Crear Materia</a>
