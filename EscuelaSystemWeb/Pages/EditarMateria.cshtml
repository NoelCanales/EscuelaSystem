@page
@model EscuelaSystemWeb.Pages.EditarMateriaModel
@{
}

<form method="post">
    <input type="hidden" asp-for="Materia.Id"/>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Materia.Codigo"></label>
        <input type="email" class="form-control" asp-for="Materia.Codigo" placeholder="Ingrese un codigo de Materia">
        <span class="text-danger" asp-validation-for="Materia.Codigo"></span>
    </div>

    <div class="form-group">
        <label asp-for="Materia.Descripcion"></label>
        <input type="email" class="form-control" asp-for="Materia.Descripcion" placeholder="Ingrese una Descripcion de Materia">
        <span class="text-danger" asp-validation-for="Materia.Descripcion"></span>
    </div>

    <div class="form-group">
        <label asp-for="Materia.Habilitada"></label>
        <input type="checkbox" class="form-control" asp-for="Materia.Habilitada">
    </div>
    <button type="submit" class="btn" btn-primary>Guardar</button><br />
          <a asp-page="/Materias">Regresar A Materias</a>  

</form>

